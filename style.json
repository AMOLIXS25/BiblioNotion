{
  "QMainWindow": [{
    "title": "BiblioNotion",
    "frameless": false
  }],
  "QCustomSlideMenu": [{
    "name": "slide_menu",
    "defaultSize": [{
      "width": 200,
      "height": "parent"
    }],
    "collapsedSize": [{
      "width": 0,
      "height": "parent"
    }],
    "expandedSize": [{
      "width": 200,
      "height": "parent"
    }],
    "toggleButton" : [{
      "buttonName": "slide_menu_button",
      "icons": [{
        "whenMenuIsCollapsed": ":/icons/pictures/align-justify.svg",
        "whenMenuIsExpanded": ":/icons/pictures/arrow-left.svg"
      }]
    }],
    "menuTransitionAnimation": [{
      "animationDuration": 600,
      "animationEasingCurve": "OutBack"
    }]
  }],
  "QStackedWidget": [{
    "name": "main_pages_container",
    "transitionAnimation": [
      {
        "fade": [{
          "active": true,
          "duration": 1000,
          "easingCurve": "OutBack"
        }],
        "slide": [{
          "active": true,
          "duration": 1000,
          "direction": "horizontal",
          "easingCurve": "OutBack"
        }]
      }
    ],
    "navigation": [
      {
        "navigationButtons": [{
          "library_button": "library_page",
          "notes_button": "notes_page",
          "settings_button": "settings_page"
        }]
      }
    ]
  }]
}